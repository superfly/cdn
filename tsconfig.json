{
  "include": [
    "./src/**/*.ts"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "./lib",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "rootDirs": [
      "./src",
      "./test",
    ]
  },
  "typedocOptions": {
    "out": "./docs/",
    "includeDeclarations": true,
    "excludeExternals": true,
    "excludeNotExported": true,
    "mode": "modules"
  }
}