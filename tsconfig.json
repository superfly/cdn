{
  "include": [
    "./src/**/*.ts"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "./lib",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "rootDirs": [
      "./src",
      "./test",
    ],
    "baseUrl": ".",
    "paths": {
      "v8env/src/fly/*": ["./node_modules/@fly/v8env/lib/fly/*"],
      "@fly/cdn": ["./src/"]
    }
  },
  "typedocOptions": {
    "out": "./docs/",
    "includeDeclarations": true,
    "excludeExternals": true,
    "excludeNotExported": true,
    "mode": "modules"
  },
}
